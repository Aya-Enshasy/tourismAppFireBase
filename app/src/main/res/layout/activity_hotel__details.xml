        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/textView23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/details"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/montserrat"
            android:text="Amenities"
            android:textColor="#001327"
            android:textSize="@dimen/_14ssp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView23"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/amenities"
            android:paddingLeft="@dimen/_15sdp"
            android:paddingTop="@dimen/_8sdp"
            android:paddingRight="@dimen/_15sdp"
            android:paddingBottom="@dimen/_8sdp"
            app:srcCompat="@drawable/ic_baseline_restaurant_menu_24"
            app:tint="#000000"
            tools:ignore="VectorDrawableCompat" />

        <ImageButton
            android:id="@+id/imageButton1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView23"
            android:layout_marginStart="@dimen/_9sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_toEndOf="@+id/imageButton"
            android:layout_toRightOf="@+id/imageButton"
            android:background="@drawable/amenitiespark"
            android:paddingLeft="@dimen/_15sdp"
            android:paddingTop="@dimen/_8sdp"
            android:paddingRight="@dimen/_15sdp"
            android:paddingBottom="@dimen/_8sdp"
            app:srcCompat="@drawable/ic_baseline_directions_car_24"
            app:tint="#000000"
            tools:ignore="VectorDrawableCompat" />

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView23"
            android:layout_marginStart="@dimen/_9sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_toEndOf="@+id/imageButton1"
            android:layout_toRightOf="@+id/imageButton1"
            android:background="@drawable/amenitieswifi"
            android:paddingLeft="@dimen/_15sdp"
            android:paddingTop="@dimen/_8sdp"
            android:paddingRight="@dimen/_15sdp"
            android:paddingBottom="@dimen/_8sdp"
            app:srcCompat="@drawable/ic_baseline_wifi_24"
            app:tint="#000000"
            tools:ignore="VectorDrawableCompat" />

        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView23"
            android:layout_marginStart="@dimen/_9sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_toEndOf="@+id/imageButton2"
            android:layout_toRightOf="@+id/imageButton2"
            android:background="@drawable/ac"
            android:paddingLeft="@dimen/_15sdp"
            android:paddingTop="@dimen/_8sdp"
            android:paddingRight="@dimen/_15sdp"
            android:paddingBottom="@dimen/_8sdp"
            app:srcCompat="@drawable/ic_baseline_call_to_action_24"
            app:tint="#000000"
            tools:ignore="VectorDrawableCompat" />

        <ImageButton
            android:id="@+id/imageButton5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView23"
            android:layout_marginStart="@dimen/_9sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_toEndOf="@+id/imageButton3"
            android:layout_toRightOf="@+id/imageButton2"
            android:background="@drawable/amenitieswifi"
            android:paddingLeft="@dimen/_15sdp"
            android:paddingTop="@dimen/_8sdp"
            android:paddingRight="@dimen/_15sdp"
            android:paddingBottom="@dimen/_8sdp"
            app:srcCompat="@drawable/ic_baseline_call_to_action_24"
            app:tint="#000000"
            tools:ignore="VectorDrawableCompat" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/textView24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageButton"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:fontFamily="@font/montserrat"
            android:text="Restaurant"
            android:textColor="#001327"
            android:textSize="@dimen/_9ssp" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/text_view25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageButton1"
            android:layout_marginStart="@dimen/_18sdp"
            android:layout_marginTop="@dimen/_6sdp"
            android:layout_toEndOf="@+id/textView24"
            android:layout_toRightOf="@+id/textView24"
            android:fontFamily="@font/montserrat"
            android:text="Parking"
            android:textColor="#001327"
            android:textSize="@dimen/_9ssp" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/textView26"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageButton2"
            android:layout_marginStart="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_6sdp"
            android:layout_toEndOf="@+id/text_view25"
            android:layout_toRightOf="@+id/text_view25"
            android:fontFamily="@font/montserrat"
            android:text="Wi-Fi"
            android:textColor="#001327"
            android:textSize="@dimen/_9ssp" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/textView27"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageButton2"
            android:layout_marginStart="@dimen/_35sdp"
            android:layout_marginTop="@dimen/_6sdp"
            android:layout_toEndOf="@+id/textView26"
            android:layout_toRightOf="@+id/textView26"
            android:fontFamily="@font/montserrat"
            android:text="AC"
            android:textColor="#001327"
            android:textSize="@dimen/_9ssp" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/textView17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageButton2"
            android:layout_marginStart="@dimen/_45sdp"
            android:layout_marginTop="@dimen/_6sdp"
            android:layout_toEndOf="@+id/textView27"
            android:layout_toRightOf="@+id/textView26"
            android:fontFamily="@font/montserrat"
            android:text="AC"
            android:textColor="#001327"
            android:textSize="@dimen/_9ssp" />

        <Button
            android:id="@+id/button"
            android:layout_width="@dimen/_140sdp"
            android:layout_height="@dimen/_36sdp"
            android:layout_below="@+id/textView26"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="@dimen/_90sdp"
            android:layout_marginLeft="@dimen/_90sdp"
            android:layout_marginTop="@dimen/_25sdp"
            android:layout_marginEnd="@dimen/_90sdp"
            android:layout_marginRight="@dimen/_90sdp"
            android:background="@drawable/selectroom"
            android:fontFamily="@font/montserrat"
            android:text="Select Room"
            android:textColor="#FFFFFF" />
    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>